rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow initial collection creation
    match /users/{userId} {
      allow create, read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /chatTemplates/{templateId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (
        !exists(/databases/$(database)/documents/chatTemplates/$(templateId)) || 
        resource.data.userId == request.auth.uid
      );
    }
    
    match /emailTemplates/{templateId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (
        !exists(/databases/$(database)/documents/emailTemplates/$(templateId)) || 
        resource.data.userId == request.auth.uid
      );
    }
    
    match /caseResolutions/{resolutionId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (
        !exists(/databases/$(database)/documents/caseResolutions/$(resolutionId)) || 
        resource.data.userId == request.auth.uid
      );
    }
    
    match /caseReplies/{replyId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (
        !exists(/databases/$(database)/documents/caseReplies/$(replyId)) || 
        resource.data.userId == request.auth.uid
      );
    }
  }
}

